<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <EditText
        android:id="@+id/opened_file"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:inputType="textFilter|textMultiLine"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20dp"
        >

        <com.dd.CircularProgressButton
            android:id="@+id/btn_chose_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Chose\nFile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cpb_textComplete="File chosen"
            app:cpb_textError="Error"
            app:cpb_textIdle="Choose File"/>

        <com.dd.CircularProgressButton
            android:id="@+id/save_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Save\nFile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cpb_textComplete="File Saved"
            app:cpb_textError="Error"
            app:cpb_textIdle="Save File"/>

        <com.dd.CircularProgressButton
            android:id="@+id/upload_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Upload\nFile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cpb_textComplete="File Uploaded"
            app:cpb_textError="Error"
            app:cpb_textIdle="Upload File"/>

    </LinearLayout>

</LinearLayout>
