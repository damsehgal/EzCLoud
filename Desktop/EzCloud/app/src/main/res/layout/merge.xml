<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="10dp"

    >

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_to"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="To"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="30dp"/>
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Receiver Repo"
            android:textColor="#000"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spinner_receiver_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:focusable="true"
            android:prompt="@string/receiver_repo_prompt"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="My Repo"
            android:textColor="#000"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spinner_sender_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:focusable="true"
            android:prompt="@string/sender_repo_prompt"
            android:spinnerMode="dialog"
            />

    </LinearLayout>


    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Details"
            android:maxLength="140"
            android:textColor="#000"
            android:textSize="30dp"/>
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.dd.CircularProgressButton
        android:id="@+id/btn_send_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="send"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cpb_textComplete="Message Sent Successfully"
        app:cpb_textError="There was an Error"

        app:cpb_textIdle="Send Message"/>


</LinearLayout>
