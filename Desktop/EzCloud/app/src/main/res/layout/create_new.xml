    <com.dd.CircularProgressButton
        android:id="@+id/btn_chose_directory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="chose directory"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cpb_textComplete="Complete"
        app:cpb_textError="There was an Error"
        app:cpb_textIdle="Chose A Folder"/>

    <com.dd.CircularProgressButton
        android:id="@+id/btn_create_new_repo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:padding="20dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cpb_textComplete="Complete"
        app:cpb_textError="There was \nan Error"
        app:cpb_textIdle="Commit ?"
        />
</LinearLayout>